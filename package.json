{
  "name": "fromABAPtoCAP",
  "version": "1.0.0",
  "description": "CAP for ABAP developers",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^3.15.0",
    "@sap-cloud-sdk/util": "^3.15.0",
    "@sap/cds": "^7",
    "@sap/cds-hana": "^2",
    "@sap/low-code-event-handler": "^1.2.4",
    "@sap/mdk-tools": "^1.3.1",
    "@sap/xsenv": ">=3.3.2 <3.3.3",
    "@sap/xssec": "^3.6.1",
    "express": "^4",
    "hdb": "^0.19.8",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/dev-cap-tools": "^1.31.0",
    "@sap/eslint-plugin-cds": "^3",
    "@sap/ux-specification": "^1.108.31",
    "eslint": "^9"
  },
  "scripts": {
    "start": "cds-serve",
    "start-local": "npm run generate-entry-point && npm run cds-watch",
    "generate-entry-point": "dev-cap-tools gen-entrypoint",
    "cds-watch": "cds watch --open",
    "watch-fromABAPtoCAP.S4SalesOrders": "cds watch --open fromABAPtoCAP.S4SalesOrders/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "app-service": {
        "impl": "@sap/low-code-event-handler"
      },
      "auth": {
        "[development]": {
          "kind": "dummy"
        },
        "[production]": {
          "kind": "xsuaa"
        }
      },
      "SalesOrderA2X": {
        "kind": "odata-v2",
        "model": "srv/external/SalesOrderA2X",
        "[development]": {
          "credentials": {
            "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_SALES_ORDER_SRV"
          }
        },
        "[production]": {
          "credentials": {
            "destination": "apihub_sandbox",
            "path": "s4hanacloud/sap/opu/odata/sap/API_SALES_ORDER_SRV"
          }
        }
      },
      "northwind": {
        "kind": "odata",
        "model": "srv/external/northwind",
        "[development]": {
          "credentials": {
            "url": "https://services.odata.org/V4/Northwind/Northwind.svc"
          }
        },
        "[production]": {
          "credentials": {
            "destination": "northwind",
            "url": "V4/Northwind/Northwind.svc"
          }
        }
      }
    },
    "features": {
      "fetch_csrf": true
    }
  },
  "lcap": true,
  "sapux": [
    "app/fromABAPtoCAP.S4SalesOrders"
  ]
}
